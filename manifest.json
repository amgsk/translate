{
  "name": "エンジニア翻訳",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "プログラマーのための翻訳ツール",
  "icons": {
    "16":  "img/translation_16.png",
    "48":  "img/translation_48.png",
